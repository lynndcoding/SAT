@model IEnumerable<SAT.UI.MVC.Models.ApplicationUser>

@{
    ViewBag.Title = "Index";
}

<div class="container">
    <h2 class="newview">@ViewBag.Title</h2>

    <p>
        @Html.ActionLink("Create New", "Create", "ScheduledClasses", null, new { @class = "btn btn-primary" })
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>

            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", "ScheduledClasses", new { id = item.Id }, new { @class = "btn btn-warning" })
                    @Html.ActionLink("Details", "Details", "ScheduledClasses", new { id = item.Id }, new { @class = "btn btn-info" })
                    @Html.ActionLink("Delete", "Delete", "ScheduledClasses", new { id = item.Id }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }

    </table>
</div>>